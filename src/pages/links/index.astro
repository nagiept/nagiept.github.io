---
import Layout from "@layouts/Layout.astro";
import Header from "@layouts/Header.astro";
import Footer from "@layouts/Footer.astro";
import data from "@content/links/links.json";

const pageTitle = "links";
---

<Layout title = {pageTitle + " - "}>
	<Header location={pageTitle}></Header>
	<article>
		<h3>{pageTitle}</h3>
		<section>
			<ul class="links">
				{
					data.map((data) => (
						<li><a href={data.url}><span>{data.title}</span></a><div>{data.description}</div></li>
					))
				}
			</ul>
		<section>
	</article>
	<Footer></Footer>
</Layout>

<style>
	@charset "utf-8";

	.links {
		position: relative;
		padding: 0;
	}

	.links li {
		display: block;
		position: relative;
		margin: 0 0 2em 0;
		line-height: 2;
	}

	.links li > * {
		display: inline-block;
		vertical-align: middle;
	}

	.links li > *:last-child {
		padding-left: 1em;
		line-height: 1.3;
	}

	.links li > *:first-child {
		position: relative;
		display: inline-flex;
		justify-items: center;
		align-items: center;
		box-sizing: border-box;
		top: 0;
		left: 0;
		width: fit-content;
		height: fit-content;
		margin: 0;
		padding: 0;
		overflow: hidden;
		border: solid 1px var(--tdc);
		border-radius: 1em;
		background: var(--tbc);
		font-size: 18px;
		color: var(--tfc);
	}

	.links span {
		display: block;
		position: relative;
		padding: .3em .6em;
		line-height: 1.3;
	}

	.links li > *:first-child {
		transition: color .2s, background .2s;
	}

	.links li > *:first-child:hover {
		color: #fff;
		border: solid 1px var(--tac);
		background: var(--tac);
	}

	@media (max-width: 680px){
		.links li > * {
			display: block;
		}

		.links li > *:first-child {
			margin: 0 0 .2em 0;
		}
	}
</style>