---
interface Props {
	links: {name: string, url: string}[];
}

const { links } = Astro.props;  
---

<ul class="social">
	{
		links.map((links) => (
			[<li><a href={links.url}><span>{links.name}</span></a></li>, `\n`]
		))
	}
</ul>

<style>
	/*social links*/

	.social {
		position: relative;
		padding: 0;
		line-height: 2.5;
	}

	.social li {
		position: relative;
		display: inline-flex;
		justify-items: center;
		align-items: center;
		box-sizing: border-box;
		top: 0;
		left: 0;
		width: fit-content;
		height: fit-content;
		margin: 0;
		padding: 0;
		overflow: hidden;
		border: solid 1px var(--tdc);
		border-radius: 1em;
		background: var(--tbc);
		font-size: 18px;
		color: var(--tfc);
		line-height: 1.3;
	}

	.social li a {
		position: relative;
		display: inline-flex;
		justify-items: center;
		align-items: center;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		color: var(--tfc);
	}

	.social span {
		display: block;
		position: relative;
		display: block;
		position: relative;
		padding: .3em .6em;
		line-height: 1.3;
	}

	.social li {
		transition: color .2s, background .2s;
	}

	.social li:hover {
		border: solid 1px var(--tac);
	}

	.social li a:hover {
		color: #fff;
		background: var(--tac);
	}
</style>